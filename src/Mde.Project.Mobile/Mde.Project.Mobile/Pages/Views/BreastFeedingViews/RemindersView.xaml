<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.Views.BreastFeedingViews.RemindersView">
    <ContentView.Content>
        <StackLayout Padding="35">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"></RowDefinition>
                    <RowDefinition Height="0.25*"></RowDefinition>
                    <RowDefinition Height="0.25*"></RowDefinition>
                    <RowDefinition Height="0.25*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Command="{Binding SendNotification}" CornerRadius="30" HorizontalOptions="Center" Grid.Column="0" VerticalOptions="Center" BackgroundColor="Pink" Grid.Row="0" TextColor="Black" Text="Set a repeating feeding reminder">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding ActiveFeedingReminder}" Value="True">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Label VerticalOptions="Center" HorizontalOptions="Center" IsVisible="{Binding ActiveFeedingReminder}" Grid.Column="0" Grid.Row="1" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Current feeding reminder set at: "></Span>
                            <Span TextColor="Red" Text="{Binding FeedingReminder}"></Span>
                            <Span TextColor="Red" Text=" minute(s)."></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Grid.Column="0" Grid.Row="2" Command="{Binding CancelReminder}" CornerRadius="30" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Pink" TextColor="Black" Text="Stop reminders">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding ActiveFeedingReminder}" Value="False">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <!--<Button HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="30" BackgroundColor="Pink" Grid.Column="0" Grid.Row="3" TextColor="Black" Text="Set pumping reminder"></Button>-->
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>